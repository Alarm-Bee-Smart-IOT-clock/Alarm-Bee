<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/welcome_to_alarm_bee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font1"
        android:text="@string/welcome_to_alarm_bee_string"
        android:textColor="@color/welcome_to_alarm_bee_color"
        android:textSize="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"/>

    <TextView
        android:id="@+id/seize_every_second__stay_on_top_of_your_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:layout_below="@id/welcome_to_alarm_bee"
        android:text="@string/seize_every_second__stay_on_top_of_your_schedule_string"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_to_alarm_bee"
        android:layout_marginStart="88dp"
        android:layout_marginTop="35dp"/>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seize_every_second__stay_on_top_of_your_schedule"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/gif1" />

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:fontFamily="@font/font1"
        android:text="Get Started"
        android:layout_below="@id/gifImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"
        android:padding="5dp"
        android:background="@drawable/rounded_button_background" />


</RelativeLayout>